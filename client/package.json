{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "npm run build && dotnet restore ../server",
    "dev": "node scripts/pre-build.js && parcel watch _layout.html -d ../app/wwwroot",
    "build": "node scripts/pre-build.js && parcel build _layout.html -d ../app/wwwroot",
    "server": "dotnet build -c Release ../server && node scripts/copy-server.js && dotnet ../web/app.dll ../app/web.settings",
    "dtos": "cd src && typescript-ref",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@servicestack/client": "^1.0.14",
    "bootstrap": "^4.1.3",
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "cssnano": "^4.0.5",
    "typescript": "^3.0.1"
  }
}
